{% extends 'base.html.twig' %}

{% block title %}Guinot-immobilier{% endblock %}

{% block body %}
    <div class = "jumbotron">
        <br> GUINOT IMMOBILIER:</br>
        <br> ACCESS LOCATION & VENTE D'APPARTEMENTS</br>
    </div>

-----------------------------------------------------
<div class="container">
      
{# Liste de ce que j'aimerai afficher#}
<div class = "row">
     <div class="col-12">
          {% for location in locations %}     
               <resume>
               {# Faisant une interpollation#}
               <h5>{{ location.denomination }}</h5>
               <p> publi√© le: : {{ location.createdAt | date('d/m/Y')}}</p>

               <div class = "content">
                    <img src="{{ location.photo}}" alt=""  align="left">
                    <p> - Categorie: {{location.categorie.titre}} </p> 
                    <p align="justify"> - Localisation:  {{ location.adresse}}   </p> 
                    <p align="justify"> - Description: {{ location.description}}   </p> 
                    <p align="justify"> - Surface: {{ location.surface}} M2   </p> 
                    <p align="justify"> - Nombre de Chambres: {{ location.chambre}}   </p> 
                    <p align="justify"> - Prix: {{ location.prix}}  TTC </p> 
                    <a href="{{ path('location.index', {'id': location.id })}}" class="btn btn-primary"> Consulter </a>  
               <br></br>
               </div>          
               </resume>
               <hr> </hr>
          {% endfor %} 
     </div>
</div>
 <div class="pagination">
        {{ knp_pagination_render(locations) }}
    </div>

</div>

{% endblock %}
